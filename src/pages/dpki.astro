---
import Layout from '@/layouts/BaseLayout.astro'
import Header from '@/components/base/Header.astro'

const pageTitle = 'DPKI | okTurtles'
---

<Layout title={pageTitle} bodyClass='dpki-content'>
  <Header />

  <section class="dpki">
    <div class="container">
      <h2>DPKI: Decentralized Public Key Infrastructure</h2>
    </div>

    <center>
      <div class="dpki-embed-container">
        <div class="dpki-embed-video">
          <iframe
            style="
              position: absolute;
              top: 0;
              left: 0;
              width: 100%;
              height: 100%;
            "
            src="//www.youtube.com/embed/IjbzIV5ElCY"
            title="YouTube video player"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
            allowfullscreen
          ></iframe>
        </div>
        <br /><br />
        <div class="dpki-embed-video">
          <iframe
            style="
              position: absolute;
              top: 0;
              left: 0;
              width: 100%;
              height: 100%;
            "
            src="//www.youtube.com/embed/xAbh0eFWrSw"
            title="YouTube video player"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
            allowfullscreen
          ></iframe>
        </div>
        <br /><br />
        <div class="dpki-embed-video">
          <iframe
            style="
              position: absolute;
              top: 0;
              left: 0;
              width: 100%;
              height: 100%;
            "
            src="//www.youtube.com/embed/c94gCECFIOs"
            title="YouTube video player"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
            allowfullscreen
          ></iframe>
        </div>
        <br /><br /><br /><br />
      </div>
    </center>

    <div class="container">
      <a
        class="link"
        href="https://blog.okturtles.org/2017/02/coniks-vs-key-transparency-vs-certificate-transparency-vs-blockchains/"
      >
        <h2>DPKI Blog</h2>
        <p>
          CONIKS vs Key Transparency vs Certificate Transparency vs
          Blockchains
        </p>
      </a>
    </div>
  </section>
</Layout>

<style lang="scss">
@use "../styles/variables" as *;

.dpki {
  padding: 80px 0;
  background-color: $white;

  h2 {
    text-align: center;
    font-size: 44px;
    color: $dark-green;
    margin-bottom: 45px;

    span {
      color: #9a9a9a;
      font-family: "proxima_novaregular";
      font-size: 20px;
    }
  }

  p {
    text-align: center;
    margin-top: -30px;
    color: $grey;
  }

  .dpki-embed-container {
    max-width: 700px;
  }

  .dpki-embed-video {
    position: relative;
    padding-bottom: 56.25%;
    padding-top: 30px;
    height: 0;
    overflow: hidden;
  }
}

@include until (767px) {
  .dpki {
    h2 {
      padding: 0 5px;
    }
  }

  .dpki-embed-container {
    padding: 0 20px;
  }
}

@include from_until(768px, 1200px) {
  .dpki {
    h2 {
      padding: 0 5px;
    }
  }

  .dpki-embed-container {
    padding: 0 20px;
  }
}
</style>
