    <h2>
        okTurtles Browser Extension <br>
        <span>Simple, surveillance-free communication, everywhere.</span>
    </h2>

    <!-- carousel -->
    <section class="cbp-so-section " style="margin-bottom:0px;">
      <article class="cbp-so-side cbp-so-side-center ">
        <div id="subtitle">
          <div class="slideshow clearfix">
